// ‚úÖ NOUVELLE FONCTION : Envoyer notification pour TOUS les types de documents
const sendNewSubmissionNotification = async (document, type) => {
  console.log('\nüìß =================================');
  console.log('üìß D√âBUT ENVOI NOTIFICATION EMAIL');
  console.log('üìß =================================');
  console.log('üìã Type:', type);
  console.log('üìÑ Document r√©f√©rence:', document.reference);
  console.log('üë§ Client:', `${document.nom} ${document.prenom}`);
  
  try {
    const superAdmins = await getSuperAdminEmails();
    
    if (superAdmins.length === 0) {
      console.log('‚ùå ARR√äT: Aucun admin trouv√© pour la notification');
      return { success: false, message: 'Aucun destinataire' };
    }

    console.log('üöÄ Cr√©ation du transporteur...');
    const transporter = createTransporter();
    
    // ‚úÖ V√©rifier la connexion SMTP
    try {
      console.log('üîç V√©rification connexion SMTP...');
      await transporter.verify();
      console.log('‚úÖ Connexion SMTP r√©ussie');
    } catch (smtpError) {
      console.error('‚ùå ERREUR SMTP:', smtpError);
      return { 
        success: false, 
        message: `Erreur SMTP: ${smtpError.message}` 
      };
    }
    
    // ‚úÖ D√©terminer le titre et les d√©tails selon le type
    const typeInfo = getTypeInfo(type, document);
    console.log('üìù Configuration email:', typeInfo);
    
    console.log(`üì§ Envoi √† ${superAdmins.length} destinataire(s)...`);
    
    const emailPromises = superAdmins.map((admin, index) => {
      console.log(`  ${index + 1}. ${admin.email} (${admin.username})`);
      
      const mailOptions = {
        from: `"DataCollectApp" <${process.env.EMAIL_USER}>`,
        to: admin.email,
        subject: typeInfo.subject,
        html: generateEmailTemplate(admin, document, typeInfo)
      };
      
      console.log(`  üì® Options email pour ${admin.email}:`, {
        from: mailOptions.from,
        to: mailOptions.to,
        subject: mailOptions.subject
      });
      
      return transporter.sendMail(mailOptions)
        .then(result => {
          console.log(`‚úÖ Email envoy√© √† ${admin.email}:`, {
            messageId: result.messageId,
            response: result.response
          });
          return result;
        })
        .catch(error => {
          console.error(`‚ùå Erreur envoi √† ${admin.email}:`, error);
          throw error;
        });
    });

    console.log('‚è≥ Envoi des emails en cours...');
    const results = await Promise.allSettled(emailPromises);
    
    // Analyser les r√©sultats
    const successful = results.filter(r => r.status === 'fulfilled').length;
    const failed = results.filter(r => r.status === 'rejected').length;
    
    console.log(`üìä R√âSULTATS ENVOI: ${successful} succ√®s, ${failed} √©checs`);
    
    if (successful > 0) {
      console.log(`‚úÖ Notifications ${type} envoy√©es avec succ√®s`);
      return { 
        success: true, 
        message: `Email envoy√© √† ${successful}/${superAdmins.length} admin(s)`,
        recipients: superAdmins.map(a => a.email),
        successful,
        failed
      };
    } else {
      console.log('‚ùå Aucun email envoy√© avec succ√®s');
      return { 
        success: false, 
        message: '√âchec de tous les envois',
        recipients: superAdmins.map(a => a.email),
        successful: 0,
        failed
      };
    }

  } catch (error) {
    console.error('‚ùå ERREUR GLOBALE envoi email:', error);
    return { 
      success: false, 
      message: error.message 
    };
  } finally {
    console.log('üìß =================================');
    console.log('üìß FIN ENVOI NOTIFICATION EMAIL');
    console.log('üìß =================================\n');
  }
};

