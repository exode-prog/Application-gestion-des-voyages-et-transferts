// ‚úÖ NOUVELLE FONCTION : Envoyer notification de rejet
const sendRejectionNotification = async (document, motifRejet, type) => {
  console.log('\nüìß =================================');
  console.log('üìß D√âBUT ENVOI NOTIFICATION REJET');
  console.log('üìß =================================');
  console.log('üìã Type:', type);
  console.log('üìÑ Document r√©f√©rence:', document.reference);
  console.log('üë§ Client:', `${document.nom} ${document.prenom}`);
  console.log(' Motif rejet:', motifRejet);

  try {
    // ‚úÖ 1. R√©cup√©rer les emails des superviseurs et agents de saisie
    const supervisorsAndAgents = await User.find({ 
      role: { $in: ['superviseur', 'agent_saisie'] },
      isActive: true 
    }).select('email username role');

    console.log(`üë• ${supervisorsAndAgents.length} superviseurs/agents trouv√©s`);

    // ‚úÖ 2. Cr√©er le transporteur email
    const transporter = createTransporter();
    
    // ‚úÖ V√©rifier la connexion SMTP
    try {
      await transporter.verify();
      console.log('‚úÖ Connexion SMTP r√©ussie');
    } catch (smtpError) {
      console.error('‚ùå ERREUR SMTP:', smtpError);
      return { 
        success: false, 
        message: `Erreur SMTP: ${smtpError.message}` 
      };
    }

    // ‚úÖ 3. Envoyer email au propri√©taire du document
    const ownerEmailResult = await sendRejectionToOwner(transporter, document, motifRejet, type);
    
    // ‚úÖ 4. Envoyer emails aux superviseurs et agents
    const teamEmailResult = await sendRejectionToTeam(transporter, document, motifRejet, type, supervisorsAndAgents);

    console.log('üìä R√âSULTATS ENVOI REJET:');
    console.log('  ‚úÖ Propri√©taire:', ownerEmailResult.success ? 'Envoy√©' : '√âchec');
    console.log('  ‚úÖ √âquipe:', teamEmailResult.successful, 'succ√®s,', teamEmailResult.failed, '√©checs');

    return {
      success: ownerEmailResult.success && teamEmailResult.successful > 0,
      owner: ownerEmailResult,
      team: teamEmailResult
    };

  } catch (error) {
    console.error('‚ùå ERREUR GLOBALE envoi notification rejet:', error);
    return { 
      success: false, 
      message: error.message 
    };
  } finally {
    console.log('üìß =================================');
    console.log('üìß FIN ENVOI NOTIFICATION REJET');
    console.log('üìß =================================\n');
  }
};

// ‚úÖ FONCTION : Envoyer email de rejet au propri√©taire
const sendRejectionToOwner = async (transporter, document, motifRejet, type) => {
  try {
    const typeInfo = getTypeInfo(type, document);
    
    const mailOptions = {
      from: `"DataCollectApp - Service Conformit√©" <${process.env.EMAIL_USER}>`,
      to: document.email,
      subject: ` Votre dossier ${document.reference} a √©t√© rejet√©`,
      html: generateOwnerRejectionTemplate(document, motifRejet, typeInfo)
    };

    console.log(`üì§ Envoi email rejet √† ${document.email}...`);
    
    const result = await transporter.sendMail(mailOptions);
    
    console.log(`‚úÖ Email rejet envoy√© au propri√©taire:`, {
      messageId: result.messageId,
      to: document.email
    });
    
    return { success: true, messageId: result.messageId };
    
  } catch (error) {
    console.error(`‚ùå Erreur envoi email rejet propri√©taire:`, error);
    return { success: false, error: error.message };
  }
};

// ‚úÖ FONCTION : Envoyer notification aux superviseurs et agents
const sendRejectionToTeam = async (transporter, document, motifRejet, type, recipients) => {
  try {
    if (recipients.length === 0) {
      console.log('‚ùå ARR√äT: Aucun destinataire √©quipe trouv√©');
      return { success: false, message: 'Aucun destinataire √©quipe' };
    }

    console.log(`üì§ Envoi notifications rejet √† ${recipients.length} membres d'√©quipe...`);

    const emailPromises = recipients.map((user, index) => {
      console.log(`  ${index + 1}. ${user.email} (${user.username} - ${user.role})`);
      
      const mailOptions = {
        from: `"DataCollectApp - Service Conformit√©" <${process.env.EMAIL_USER}>`,
        to: user.email,
        subject: `üö® Dossier ${document.reference} rejet√© - Action requise`,
        html: generateTeamRejectionTemplate(user, document, motifRejet, type)
      };
      
      return transporter.sendMail(mailOptions)
        .then(result => {
          console.log(`‚úÖ Notification rejet envoy√©e √† ${user.email}`);
          return { success: true, user: user.email, messageId: result.messageId };
        })
        .catch(error => {
          console.error(`‚ùå Erreur envoi notification rejet √† ${user.email}:`, error);
          return { success: false, user: user.email, error: error.message };
        });
    });

    const results = await Promise.allSettled(emailPromises);
    
    const successful = results.filter(r => r.status === 'fulfilled' && r.value.success).length;
    const failed = results.filter(r => r.status === 'fulfilled' && !r.value.success).length + 
                   results.filter(r => r.status === 'rejected').length;

    console.log(`üìä R√âSULTATS √âQUIPE: ${successful} succ√®s, ${failed} √©checs`);
    
    return {
      successful,
      failed,
      total: recipients.length
    };

  } catch (error) {
    console.error(' ERREUR envoi notifications √©quipe:', error);
    return { successful: 0, failed: recipients.length, error: error.message };
  }
};





