// Configuration du transporteur email
const createTransporter = () => {
  console.log('üîß Cr√©ation du transporteur email...');
  console.log('üìß Email USER:', process.env.EMAIL_USER ? '‚úÖ D√©fini' : '‚ùå MANQUANT');
  console.log('üîë Email PASS:', process.env.EMAIL_PASSWORD ? '‚úÖ D√©fini' : '‚ùå MANQUANT');
  
  return nodemailer.createTransport({
    service: 'gmail',
    auth: {
      user: process.env.EMAIL_USER,
      pass: process.env.EMAIL_PASSWORD
    }
  });
};

